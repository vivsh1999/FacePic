# MongoDB Configuration
# For MongoDB Atlas, use your connection string:
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?appName=cluster
MONGODB_DATABASE=imagetag

# Cloudflare R2
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key

# Face Recognition Settings
FACE_RECOGNITION_TOLERANCE=0.6
# Use 'hog' for faster but less accurate, 'cnn' for slower but more accurate
FACE_RECOGNITION_MODEL=cnn

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:4173
